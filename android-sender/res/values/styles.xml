<resources>
    <style name="label">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- The theme applied to the application or activity -->
    <style name="spellcast_theme"
           parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/spellcast_action_bar</item>
        <item name="actionBarStyle">@style/spellcast_action_bar</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="isLightTheme">false</item>
    </style>

    <!-- ActionBar -->
    <style name="spellcast_action_bar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/spellcast_action_bar_title_text</item>
        <item name="titleTextStyle">@style/spellcast_action_bar_title_text</item>
    </style>

    <!-- ActionBar title text -->
    <style name="spellcast_action_bar_title_text"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button">
         <item name="android:background">?android:attr/selectableItemBackground</item>
         <item name="android:textAllCaps">true</item>
         <item name="android:textStyle">bold</item>
         <item name="android:textColor">@color/color_accent</item>
         <item name="android:padding">15dp</item>
         <item name="android:layout_margin">10dp</item>
    </style>

    <color name="color_primary">#F3E5F5</color>
    <color name="color_accent">#BA68C8</color>
    <color name="color_primary_dark">#6A1B9A</color>
    <color name="actionbar_background">#7B1FA2</color>
    <color name="screen_background">#9C27B0</color>
    <color name="button_background">#00796B</color>
    <color name="spellcast_spell_background_arc_color">#4285F4</color>
    <color name="spellcast_spell_bonus_background_color">#ffd300</color>
</resources>
